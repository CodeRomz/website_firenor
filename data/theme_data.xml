<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Register the theme assets -->
        <template id="assets_backend" name="website_firenor assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/scss" href="/website_firenor/static/src/scss/primary_variables.scss"/>
            </xpath>
        </template>

        <template id="assets_frontend" name="website_firenor assets" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/scss" href="/website_firenor/static/src/scss/primary_variables.scss"/>
            </xpath>
        </template>

        <template id="assets_editor" name="website_firenor assets" inherit_id="website.assets_editor">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/scss" href="/website_firenor/static/src/scss/primary_variables.scss"/>
            </xpath>
        </template>

        <!-- Define the theme -->
        <record id="theme_firenor" model="website.theme">
            <field name="name">Firenor Theme</field>
            <field name="description">A custom theme for Firenor.</field>
            <field name="assets_backend" eval="[
                'website_firenor/static/src/scss/primary_variables.scss',
            ]"/>
            <field name="assets_frontend" eval="[
                'website_firenor/static/src/scss/primary_variables.scss',
            ]"/>
            <field name="assets_editor" eval="[
                'website_firenor/static/src/scss/primary_variables.scss',
            ]"/>
        </record>
    </data>
</odoo>
